{
  "type": "service",
  "name": "www",
  "description": "Webserver for public web app.",
  "secrets": {
    "mongodb-uri": {}
  },
  "components": [
    {
      "name": "www",
      "ports": [
        {
          "name": "http",
          "port": 3000,
          "protocol": "HTTP",
          "external_access": {
            "public": true
          }
        }
      ],
      "build": {
        "git_repository": {
          "url": "https://github.com/doug-ol/coinfolio.git",
          "commit": "316350722bbc17e6025807d13145c0afa2516c28"
        },
        "language": "ruby:2.4.0",
        "command": "apt update && apt-get install -y nodejs && bundle install"
      },
      "exec": {
        "command": [
          "rails",
          "s"
        ],
        "environment": {
          "MONGOLAB_URI": { "secret": "mongodb-uri" }
        }
      }
    }
  ],
  "resources": {
    "num_instances": 1,
    "instance_type": "t2.small"
  }
}

